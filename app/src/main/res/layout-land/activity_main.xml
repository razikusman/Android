<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:alpha="10"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/img_btngal"
            android:layout_width="206dp"
            android:layout_height="131dp"
            android:layout_weight="1"
            android:backgroundTint="#00000000"
            android:contentDescription="TODO"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:tint="#F5F6F6"
            app:srcCompat="@drawable/gallery" />

        <ImageButton
            android:id="@+id/imag_btnvlt"
            android:layout_width="206dp"
            android:layout_height="131dp"
            android:layout_weight="1"
            android:backgroundTint="#00000000"
            android:padding="0dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/vault" />

        <ImageButton
            android:id="@+id/btn_encrypt"
            android:layout_width="206dp"
            android:layout_height="131dp"
            android:layout_weight="1"
            android:backgroundTint="#00000000"
            android:padding="0dp"
            android:scaleType="centerInside"
            app:layout_constraintEnd_toStartOf="@+id/btn_dcrypt"
            app:srcCompat="@drawable/encryption" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <ImageButton
            android:id="@+id/btn_dcrypt"
            android:layout_width="206dp"
            android:layout_height="131dp"
            android:layout_weight="1"
            android:backgroundTint="#00000000"
            android:padding="0dp"
            android:scaleType="centerInside"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imag_btnvlt"
            app:srcCompat="@drawable/unlocked" />

        <ImageButton
            android:id="@+id/btn_pload"
            android:layout_width="206dp"
            android:layout_height="131dp"
            android:layout_weight="1"
            android:backgroundTint="#00000000"
            android:padding="0dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/locked" />

        <ImageButton
            android:id="@+id/btn_pdec"
            android:layout_width="206dp"
            android:layout_height="131dp"
            android:layout_weight="1"
            android:backgroundTint="#00000000"
            android:padding="0dp"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ulocked" />
    </LinearLayout>

</LinearLayout>